<main class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-8">
  <h1 class="text-2xl font-bold text-blue-600 mb-6">Upcoming Rides</h1>

  {{#if rides.length}}
    <ul class="space-y-6">
      {{#each rides}}
        <li class="border rounded-lg p-6">
          <div>
            <p><strong>Role:</strong> {{role}}</p>
            <p><strong>Rider:</strong> {{rider}}</p>
            <p><strong>Driver:</strong> {{driver}}</p>
            <p><strong>Origin:</strong> {{origin}}</p>
            <p><strong>Destination:</strong> {{destination}}</p>
            <p><strong>Date:</strong> {{date}}</p>
            <p><strong>Time:</strong> {{time}}</p>
            <p><strong>Amount:</strong> ${{amount}}</p>
          </div>
          {{#if canCancel}}
            <form action="/upcomingRides/cancel/{{rideId}}" method="POST" class="mt-4">
              <button
                type="submit"
                class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300"
              >
                Cancel Ride
              </button>
            </form>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-gray-500">No upcoming rides at the moment.</p>
  {{/if}}
</main>
